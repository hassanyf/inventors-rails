<div id="ideas_show">
  <div id="show_banner">
    <div class="wrapper_skinny">
      <h1>The Rocketship Idea</h1>
    </div>  
  </div>

  <div id="links">
    <div class="wrapper_skinny">
      <ul>
        <li class="current">Ideas</li>
        <li><%= link_to "New Idea", new_ideabook_idea_path(@ideabook) %></li>
        <li><%= link_to "Account Settings", edit_ideabook_registration_path %></li>
        <li><%= link_to "View Ideabook", ideabook_path(current_ideabook) %></li>
      </ul>
    </div>
  </div>
  
  <div id="episodes">
    <div class="wrapper_skinny">
      <ul class="cf">
        <% @ideas.each do |idea| %>
          <li class="cf">
            <div class="episode_thumbnail">
              <a href="">
                <img src="img/thumb1.png" alt="">
              </a>
            </div>
            <div class="episode_overview">
              <h2><%= link_to idea.title, ideabook_idea_path(@ideabook, idea) %></h2>
              <p class="description"><%= truncate(idea.description, length: 140) %></p>
              <div class="authorized_links">
                  <%= link_to "Edit", edit_ideabook_idea_path(@ideabook, idea) %>
                  <%= link_to "Delete", ideabook_idea_path(@ideabook, idea), method: :delete, data: {confirm: "Are you sure?"} %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="pagination">
<span class="previous_page disabled">Previous</span>
<em class="current">1</em>
<a href="#">2</a>
<a class="next_page" href="#">Next</a>
</div>