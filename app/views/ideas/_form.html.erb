<%= form_for ([@ideabook, @idea]) do |f| %>
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %><br>
	</div>

	<div class="field">
		<%= f.label :idea_thumbnail %><br>
		<%= f.file_field :idea_thumbnail %><br>
	</div>

	<%= f.submit class: "button button_highlight button_block" %><br>
<% end %>